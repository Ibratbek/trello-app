<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="css/style.css">

</head>
<div>
  <div class="container">

    <h1 class="text-center mb-5 mt-3">Trello Alternative</h1>
    <form action="/search" method="POST">
      <input type="text" name="searchText" class="form-group" style="width: 200px;" placeholder="Search...">
      <button type="submit" class="btn btn-danger"">Search</button>
    </form>
    <br>
    <div class=" row">
        <% columns.forEach(column=> { %>
          <div class="col-3">
            <div class="card-header bg-success text-white ">
              <%= column.title %>
            </div>
            <% cards.forEach(card=> { %>
              <% if(column._id==card.id){ %>
                <p class="card-title bg-light" style="padding:5 px;">
                 <a href="/cards/<%= card._id %>"><%= card.content %></a> 

                    <a href="/edit-card/<%= card._id %>">Edit</a>
                    <a href="/delete-card/<%= card._id %>">Delete</a>
                    <br>
                    <p>Assigness: <%= card.users %></p>
                </p>
                <% } %>
                  <% }) %>
                    <br>
                    <form action="/add-card" method="POST">
                      <input type="text" name="cardContent" class="form-group" style="width: 200px;"
                        placeholder="Add task">
                      <button type="submit" class="btn btn-danger"">+</button>
              <input type=" text" hidden name="columnId" value=<%=column._id %> >
                    </form>
                    <br><br><br>
          </div>
          <% }) %>
            <div class=" col-3">
              <form action="/add-column" method="POST">
                <input type="text" name="columnName" class="form-group" style="width: 200px;" placeholder="Add Column">
                <button type="submit" class="btn btn-success"">+</button>
            </form>
          </div>
        </div>
    </div>

   
</body>
</html>